pipeline {
    agent { label 'agent-linux' }

    environment {
        AZURE_CREDS = credentials('AZURE_CREDENTIALS')
    }

    stages {
        stage('Login to Azure') {
            steps {
                pwsh '''
                    $env:AZURE_CREDENTIALS_JSON = $env:AZURE_CREDS
                    ./login.ps1
                '''
            }
        }

        stage('Run Azure PowerShell') {
            steps {
                pwsh './list-resource-groups.ps1'
            }
        }
    }
}
